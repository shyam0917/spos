<%-include ./header.ejs%>
<style type="text/css">
    input[type="password"],
    select {
        width: 36%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 36%;
        background-color: #222;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #222;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
    }

    .testing {
        margin-top: 7%;
    }
</style>
<form action="<%=url%>" method="post">
    <div class="banner-down">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="logedForm">
                        <form>
                            <div class="forCenter">
                                <div class="form-group">
                                    <!-- <label for="uname"><b>Password</b></label> -->
                                    <h6 class="tlloged">Password</h6>
                                    <div>
                                        <input type="hidden" name="sysid" value="<%=sysid%>">
                                        <input type="password" placeholder="New password" class="emailBox" name="newPassword">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h6 class="tlloged">Confirm Password</h6>
                                    <div>
                                        <input type="password" placeholder="confirm password" class="emailBox" name="confirmPassword">

                                    </div>
                                </div>

                                <input type='submit' class='sblgnbtn' id="finish" name='finish' value='Update Password' />
                                <p style="color:#dc3545 ">
                                    <strong>
                                        <%=msg%>
                                    </strong>
                                </p>
                                <!-- <div class="backbtnlg">
                                    <a [routerLink]="['/login']" class="backbtnlgn">Back Login Page</a>

                                </div> -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</body>

</html>